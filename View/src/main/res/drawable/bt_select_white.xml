            <corners android:radius="25dp" />

            <solid android:color="#e495bff9" />
            <padding android:bottom="5dp" android:left="15dp" android:right="15dp" android:top="5dp" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="25dp" />
            <!-- 点击之前 -->
            <solid android:color="#ffffff" />
            <padding android:bottom="5dp" android:left="15dp" android:right="15dp" android:top="5dp" />
        </shape>

    </item>


</selector>