<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/lightgray"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/layout_year"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:gravity="center"
            android:orientation="horizontal">

            <com.hx.view.wedget.wheelview.view.CycleWheelView
                android:id="@+id/cycle_year"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:fadingEdge="none"
                android:scrollbars="none" />

            <TextView
                android:id="@+id/tv_year"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@color/lightgray"
                android:text="@string/year"
                android:layout_marginRight="@dimen/default_margin"
                android:gravity="center" />
            <View
                android:id="@+id/view_year_line"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/lightgray"

                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_month"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center"
            android:orientation="horizontal">

            <com.hx.view.wedget.wheelview.view.CycleWheelView
                android:id="@+id/cycle_month"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:fadingEdge="none"
                android:scrollbars="none" />

            <TextView
                android:id="@+id/tv_month"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@color/lightgray"
                android:text="@string/month"
                android:layout_marginRight="@dimen/default_margin"
                android:gravity="center" />
            <View
                android:id="@+id/view_month_line"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/lightgray"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_day"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center"
            android:orientation="horizontal">

            <com.hx.view.wedget.wheelview.view.CycleWheelView
                android:id="@+id/cycle_day"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:fadingEdge="none"
                android:scrollbars="none" />

            <TextView
                android:id="@+id/tv_day"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@color/lightgray"
                android:text="@string/day"
                android:layout_marginRight="@dimen/default_margin"
                android:gravity="center" />

            <View
                android:id="@+id/view_day_line"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/lightgray"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_hour"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:visibility="gone"
            android:gravity="center"
            android:orientation="horizontal">

            <com.hx.view.wedget.wheelview.view.CycleWheelView
                android:id="@+id/cycle_hour"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:fadingEdge="none"
                android:scrollbars="none" />

            <TextView
                android:id="@+id/tv_hour"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@color/lightgray"
                android:text="@string/hour"
                android:layout_marginRight="@dimen/default_margin"
                android:gravity="center" />
            <View
                android:id="@+id/view_hour_line"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/lightgray"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_mins"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center"
            android:visibility="gone"
            android:orientation="horizontal">

            <com.hx.view.wedget.wheelview.view.CycleWheelView
                android:id="@+id/cycle_mins"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:fadingEdge="none"
                android:scrollbars="none" />

            <TextView
                android:id="@+id/tv_mins"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@color/lightgray"
                android:text="@string/mins"
                android:layout_marginRight="@dimen/default_margin"
                android:gravity="center" />
            <View
                android:id="@+id/view_mins_line"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/lightgray"
                />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>