<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/layout_simple_title" />

    <ImageView
        android:id="@+id/authorization_image"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/authorization_success" />

    <TextView
        android:id="@+id/authorization_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="恭喜您！\n申请已提交"
        android:lineSpacingExtra="5dp"
        android:textColor="#fe8956"
        android:textSize="22sp" />

    <Button
        android:id="@+id/finish_bt"
        style="@style/button_green_style"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:text="返回" />
</LinearLayout>
