<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.yhx.loan.activity.order.repay.RepayResultActivity">

    <include layout="@layout/layout_simple_title" />
    <ImageView
        android:id="@+id/repayResultImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40dp"
        android:src="@drawable/refund_icon_submit_success"/>

    <TextView
        android:id="@+id/repayResultTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:text="还款申请提交成功"
        android:textSize="19sp"
        android:textColor="@color/black" />
    <TextView
        android:id="@+id/repayResultDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:textSize="14sp"
        android:textColor="@color/textblack"
        android:text="请耐心等待！"/>
    <Button
        android:id="@+id/repayResultBack"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40dp"
        android:textColor="@color/white"
        android:background="@drawable/bt_select_green"
        android:text="返回"/>
</LinearLayout>
