<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/layout_simple_title" />

    <LinearLayout
        android:id="@+id/essential_lay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:background="@color/white"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="电子邮箱"
                android:textColor="@color/textblack"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/et_loan_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:entries="@array/loan_education"
                android:gravity="right|center_vertical"
                android:hint="请选择"
                android:paddingRight="20dp"
                android:textSize="@dimen/text_size_loan_edit" />

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/grayline" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:text="最高学历"
                android:textColor="@color/textblack"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/et_loan_EnducationDegree"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/right9"
                android:entries="@array/loan_education"
                android:gravity="right|center_vertical"
                android:hint="请选择"
                android:textSize="@dimen/text_size_loan_edit" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/grayline" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:text="婚姻状况"
                android:textColor="@color/textblack"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/et_loan_MaritalStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/right9"
                android:entries="@array/loan_marry"
                android:gravity="right|center_vertical"
                android:hint="请选择"
                android:textSize="@dimen/text_size_loan_edit" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/grayline" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="居住城市"
                android:textColor="@color/textblack"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/et_loan_ResidenceAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/right9"
                android:gravity="right|center_vertical"
                android:hint="请选择"
                android:textColor="@color/textblack"
                android:textSize="@dimen/text_size_loan_edit" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/grayline" />

        <EditText
            android:id="@+id/et_loan_ResidenceAddress_road"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@null"
            android:gravity="right"
            android:hint="输入详细地址"
            android:padding="5dp"
            android:paddingRight="15dp"
            android:textColor="@color/textblack"
            android:textSize="16sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/grayline" />



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:text="住房性质"
                android:textColor="@color/textblack"
                android:textSize="@dimen/text_size_loan_titler" />

            <TextView
                android:id="@+id/sp_loan_NowLivingState"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@drawable/right9"
                android:entries="@array/loan_now_living_state"
                android:gravity="right|center_vertical"
                android:hint="请选择"
                android:textColor="@color/textblack"
                android:textSize="@dimen/text_size_loan_edit" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/grayline" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="4dp"
                android:text="供养人数"
                android:textColor="@color/textblack"
                android:textSize="@dimen/text_size_loan_titler" />

            <EditText
                android:id="@+id/et_loan_SupportCount"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="right|center_vertical"
                android:hint="请填写"
                android:inputType="number"
                android:maxLength="3"
                android:maxLines="1"
                android:paddingRight="10dp"
                android:textSize="@dimen/text_size_loan_edit" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/grayline" />

    </LinearLayout>

    <Button
        android:id="@+id/essential_info_submit"
        style="@style/button_green_style"
        android:text="提交" />


</LinearLayout>
