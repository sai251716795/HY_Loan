<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <shape android:exitFadeDuration="@android:integer/config_shortAnimTime" android:shape="rectangle">
            <corners android:radius="35dp" />
            <!-- 点击之前 -->
            <gradient android:centerColor="#ec7937" android:endColor="#f2662b" android:startColor="#f48b4f" />
            <padding android:bottom="5dp" android:left="10dp" android:right="10dp" android:top="5dp" />
        </shape>
    </item>
    <item android:drawable="@null" android:state_checked="false" />
    <item android:drawable="@null" />

</selector>